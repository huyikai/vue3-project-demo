{
  "compilerOptions": {
    "baseUrl": ".", // 解析非相对模块的基础地址，默认是当前目录
    "paths": {
      "@/*": [
        "./src/*"
      ] // 路径映射，相对于baseUrl
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}